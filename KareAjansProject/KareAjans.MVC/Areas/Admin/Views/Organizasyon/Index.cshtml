@model List<Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h5>Organizasyon Sipariş Listesi</h5>
               
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Organizasyon Id</th>
                        <th>Organizasyon Numarası</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>Adres</th>
                        <th>Onaylama</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.OrganizasyonNumarasi</td>
                            <td>@item.BaslangicTarihi.ToString("dd/MM/yyyy")</td>
                            <td>@item.BitisTarihi.ToString("dd/MM/yyyy")</td>
                            <td>@item.OrganizasyonAdresi</td>
                            <td>@item.Onaylama</td>
                            <td>
                                <a href="/admin/organizasyon/details/@item.Id" class="btn btn-primary btn-sm">Organizasyon Oluştur</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


