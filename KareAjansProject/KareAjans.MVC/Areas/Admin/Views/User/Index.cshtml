@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "AddAdminRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<@if (TempData["Success"] != null)
{
        <div class="alert alert-success">
            <span>@TempData["Success"]</span>
        </div>
}
else if (TempData["Error"] != null)
{
        <div class="alert alert-success">
            <span>@TempData["Error"]</span>
        </div>
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h5>Kullanıcı  Listesi</h5>
                <a asp-action="CreateRole" asp-controller="User">Kullanıcı ekle</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                          <tr>
                              <td>
                                @item.Id

                                  </td>
                                  <td>@item.UserName</td>
                                  <td>@item.Email</td>
                                  <td>
                                      <a asp-action="/" asp-controller="/" class="btn primary btn-primary">Kullanıcı</a>
                                    <a asp-action="AddToRole" asp-controller="User" asp-route-id="@item.Id" class="btn primary btn-primary">Admin</a>
                                  </td>
                          </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
