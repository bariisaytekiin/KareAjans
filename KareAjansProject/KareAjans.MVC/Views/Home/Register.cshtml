@model RegisterVM
@{
    ViewData["Title"] = "Create";
}

<h1>Kullanıcı Oluşturma</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <span>@TempData["Error"]</span>
    </div>
}

<div class="row">
    <div class="col-md-4 mx-auto">
        <div asp-validation-summary="All">
        </div>
        <form asp-action="Register" asp-controller="Home">
            <div class="mb-2">
                <label> Kullanıcı Adı</label>
                <span asp-validation-for="Username"> </span>
                <input class="form-control" asp-for="Username" />
            </div>
            <div class="mb-2">
                <label> Email Adresi</label>
                <span asp-validation-for="Email"> </span>
                <input type="email" class="form-control" asp-for="Email" />
            </div>
            <div class="mb-2">
                <label> Şifre</label>
                <span asp-validation-for="Password"> </span>
                <input type="password" class="form-control" asp-for="Password" />
            </div>
            <div class="mb-2">
                <label> Şifre Onayı</label>
                <span asp-validation-for="ConfirmPassword"> </span>
                <input type="password" class="form-control" asp-for="ConfirmPassword" />
            </div>
            <button type="submit" class="btn btn-primary">Kullanıcı Oluştur</button>

        </form>
    </div>

</div>
