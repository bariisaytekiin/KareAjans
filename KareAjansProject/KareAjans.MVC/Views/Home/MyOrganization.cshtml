@model Kareajans.Common.Cart

@{
    ViewData["Title"] = "MyOrganization";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <div class="col-md-9">
        <table class="table">
            <thead>
                <tr>
                    <th>Manken Adı</th>
                    <th>Manken Soyadı</th>
                    <th>Manken Boy</th>
                    <th>Manken Kilo</th>
                    <th>Kategorisi</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model._myCart.Values)
                {

                    <tr>
                        <td>@item.MankenAdi</td>
                        <td>@item.MankenSoyadi</td>
                        <td>@item.MankenBoyu</td>
                        <td>@item.MankenKilosu</td>
                        <td>@item.Kategori</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h3>Tarih Aralığı: </h3><!--Organizasyonla modelleri bir view ypaıp tarihi çekmem lazım.-->

                <form asp-action="CompleteOrganization" asp-controller="Home" method="get">
                    <label class="form-label">Organizasyonun Yapılacağı Şehir</label>
                    <input type="text" name="sehir" />
                    <label class="form-label">Organizasyonun Yapılacağı Açık Adres</label>
                    <input type="text" name="adres" />
                    <label class="form-label">Organizasyonun Yapılacağı Başlangıç Tarihi</label>
                    <input type="date" name="baslangic" />
                    <label class="form-label">Organizasyonun Yapılacağı Bitiş Tarihi</label>
                    <input type="date" name="bitis" />
                    <br />
                    <br />
                    <input type="submit" value="Gönder" />
                </form>

            </div>
        </div>
    </div>
